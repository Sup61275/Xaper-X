<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="coolPinkNav" parent="Theme.Material3.Light">
        <!-- Change ActionBar background color -->
        <item name="colorPrimary">@color/cool_pink</item>
        <item name="colorPrimaryVariant">@color/cool_pink</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Change ActionBar title color -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Change NavigationView menu icon and text color -->
        <item name="android:textColorSecondary">@color/white</item>


        <!-- Change NavigationView background color -->
        <item name="android:itemBackground">@drawable/fancy_background</item>

        <!-- Other theme attributes you already have -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>
